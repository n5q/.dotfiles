[Trigger]
Operation = Upgrade
Type = Package
Target = pacman-mirrorlist

[Action]
Description = Ranking mirrors
When = PostTransaction
Depends = reflector
Exec = /bin/sh -c "reflector --threads 250 --latest 250 --protocol http --protocol https --sort rate --save /etc/pacman.d/mirrorlist; rm -f /etc/pacman.d/mirrorlist.pacnew"
